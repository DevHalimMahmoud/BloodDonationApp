<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Settings.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,NotSibling">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="15dp">

            <TextView
                android:id="@+id/text_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:padding="10dp"
                android:shadowColor="@color/purple_200"
                android:text="Account Information"
                android:textAlignment="center"
                android:textColor="#B31217"
                android:textSize="20sp"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/TextEmail"
                android:layout_width="260dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"

                android:background="@drawable/style"
                android:ems="10"
                android:hint="  E-mail"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.543"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/set_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/style"
                android:fontFamily="casual"
                android:gravity="center"
                android:padding="10dp"
                android:shadowColor="@color/purple_200"
                android:text="Change Email"
                android:textAlignment="center"
                android:textColor="#B31217"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/set_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/style"
                android:fontFamily="casual"
                android:gravity="center"
                android:padding="10dp"
                android:shadowColor="@color/purple_200"
                android:text="Send Password Reset"
                android:textAlignment="center"
                android:textColor="#B31217"
                android:textSize="20sp"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/TextName"
                android:layout_width="260dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"

                android:background="@drawable/style"
                android:ems="10"
                android:hint="  Name"
                android:inputType="text"

                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.543"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/set_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/style"
                android:fontFamily="casual"
                android:gravity="center"
                android:padding="10dp"
                android:shadowColor="@color/purple_200"
                android:text="Change Name"
                android:textAlignment="center"
                android:textColor="#B31217"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:background="@color/black"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/text_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:padding="10dp"
                android:shadowColor="@color/purple_200"
                android:text="Personal Information"
                android:textAlignment="center"
                android:textColor="#B31217"
                android:textSize="20sp"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/numberAge"
                android:layout_width="260dp"
                android:layout_height="36dp"

                android:layout_gravity="center"
                android:layout_marginTop="40dp"

                android:background="@drawable/style"
                android:ems="10"
                android:hint="  Age"
                android:inputType="number"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.543"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/TextNational"
                android:layout_width="260dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/style"

                android:ems="10"
                android:hint="National ID Number"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.543"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/TextAddress"
                android:layout_width="260dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/style"

                android:ems="10"
                android:hint="Address"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.542"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:text="Blood type" />

                <Spinner
                    android:id="@+id/BloodType1"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <Spinner
                    android:id="@+id/BloodType2"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/Group1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"

                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender " />

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Male"

                        />

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Female" />

                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Do  you have any of the following conditions  ?"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Cancer" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cardiac disease" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lung disease" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hepatitis B and C" />

            <CheckBox
                android:id="@+id/checkBox10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HIV infaction " />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AIDS or Sexually Transmitted Diseases (STD)" />

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chronic alcoholism" />

            <CheckBox
                android:id="@+id/checkBox7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pregnancy" />

            <CheckBox
                android:id="@+id/checkBox8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acute fever" />

            <CheckBox
                android:id="@+id/checkBox9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ear or body piercing and tattooing" />

            <Button

                android:id="@+id/update"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/style_button"
                android:text=" Update info "
                android:textColor="@color/white"
                app:backgroundTint='#B31217' />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>