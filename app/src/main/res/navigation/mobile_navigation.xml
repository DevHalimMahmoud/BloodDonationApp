<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.blooddonationapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_Donate"
            app:destination="@id/nav_Donate"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_nav_home_to_nav_Request_Donation"
            app:destination="@id/nav_Request_Donation"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>

    <fragment
        android:id="@+id/nav_Donate"
        android:name="com.example.blooddonationapp.ui.Donate.DonateFragment"
        android:label="@string/menu_donate"
        tools:layout="@layout/fragment_donate" />

    <fragment

        android:id="@+id/nav_Request_Donation"
        android:name="com.example.blooddonationapp.ui.RequestDonation.RequestDonationFragment"
        android:label="@string/menu_requestdonation"
        tools:layout="@layout/fragment_request_donation" >
        <action
            android:id="@+id/action_nav_Request_Donation_to_requestForm"
            app:destination="@id/requestForm" />
    </fragment>
    <fragment
        android:id="@+id/nav_Settings"
        android:name="com.example.blooddonationapp.ui.Settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/nav_About"
        android:name="com.example.blooddonationapp.ui.About.AboutFragment"
        android:label="@string/menu_about"
        tools:layout="@layout/fragment_about" />
    <activity
        android:id="@+id/requestForm"
        android:name="com.example.blooddonationapp.ui.RequestDonation.RequestForm"
        android:label="activity_request_form"
        tools:layout="@layout/activity_request_form" />
    <fragment
        android:id="@+id/nav_my_requests"
        android:name="com.example.blooddonationapp.ui.MyRequests.MyRequestsFragment"
        android:label="My Request"
        tools:layout="@layout/my_requests_fragment"/>
</navigation>